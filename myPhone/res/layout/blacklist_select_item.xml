<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout    
    android:id="@+id/blacklist_select_item_layout"    
    android:layout_width="fill_parent"    
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_height="wrap_content">  
<TextView    
    android:text=""    
    android:layout_height="wrap_content"    
    android:textSize="20dip"
    android:layout_width="wrap_content"    
    android:id="@+id/blacklist_number"  
    />  
<TextView    
    android:text=""    
    android:textSize="15dip"
    android:layout_height="wrap_content"    
    android:layout_width="wrap_content"    
    android:layout_below="@+id/blacklist_number"    
    android:id="@+id/blacklist_name"/>
<TextView    
    android:text=""    
    android:textSize="15dip"
    android:layout_height="wrap_content"    
    android:layout_width="wrap_content"    
    android:layout_below="@+id/blacklist_number"    
    android:layout_toRightOf="@+id/blacklist_name"    
    android:id="@+id/blacklist_location"/>
<CheckBox    
        android:id="@+id/blacklist_check"    
        android:layout_alignParentRight="true"  
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content"    
        android:focusable="false"    
        android:focusableInTouchMode="false"    
        android:clickable="true"           
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>  
</RelativeLayout>